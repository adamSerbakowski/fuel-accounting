{% extends "base.twig" %}

{% block content %}
    <div class="kierowcy">
        <h2>Kierowcy</h2>
        <div class="tabela col-12">
        <div class="row table-head">
            <span>ID</span>
            <span>Nazwisko</span>
            <span>Aktywny</span>
            <span>Data ostatniego rozliczenia</span>
        </div>
        <div class="row dodaj-kierowca">
            <form onsubmit="dodajKierowca(event)">
                <input type="submit" value="DODAJ">
                <input type="text" id="nazwisko" name="nazwisko">
            </form>
        </div>
        
        {% for driver in content.activeDrivers %}
            {% include '/partials/single/driver.twig' with {'driver': driver} %}
        {% endfor %}

        <p>Kierowcy archiwalni</p>

        {% for driver in content.archivedDrivers %}
            {% include '/partials/single/driver.twig' with {'driver': driver} %}
        {% endfor %}
        
        </div>
    </div>
{% endblock %}