{% extends "base.twig" %}

{% block content %}

<div class="col-12 col-md-12">
    <div class="trasy">
        <h2>Dodaj Trasę</h2>
        <div class="col-12">
            <div class="row table-head">
                <span>ID</span>
                <span>Samochód</span>
                <span>Kierowca</span>
                <span>Data początkowa</span>
                <span>Data końcowa</span>
                <span>Przejechane kilometry kierowcy</span>
                <span>Kilometry system</span>
                <span>Paliwo system</span>
            </div>
        </div>
        <form onsubmit="addAggregatedDelivery(event)">
            <div class='col-12'>
                <div class='row'>
                    {% include '/partials/addition_forms/delivery.twig' %}
                </div>
                <div class='row'>
                    <div id='deliveryPurchases'>
                        {% include '/partials/addition_forms/delivery_purchase.twig' with {'count': 1} %}
                    </div>
                </div>
            </div>
            <div id="add-release" class="button">
                Dodaj tankowanie
            </div>
        </form>
    </div>
</div>

{% endblock %}